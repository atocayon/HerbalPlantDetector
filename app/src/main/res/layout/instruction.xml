<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#FFF">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_dark"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/close"
        />

        <TextView
            android:layout_below="@+id/close"
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/ins1"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="10dp"
            />


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_below="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonBack1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:visibility="gone"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonBack2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:visibility="gone"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonBack3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:visibility="gone"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonBack4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:visibility="gone"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonBack5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_24dp"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                android:visibility="gone"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_centerInParent="true"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dialogButtonOK5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ok"
                app:backgroundTint="#0000ff"
                android:onClick="more"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:useCompatPadding="true"
                app:maxImageSize="40dp"
                android:layout_below="@+id/instruction"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
        </LinearLayout>





    </LinearLayout>




</RelativeLayout>